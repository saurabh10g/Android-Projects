<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Book Shelf"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/headingbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/outerLayout"
        android:textStyle="bold|italic"
        android:textSize="22sp"
    />

    <LinearLayout
        android:id="@+id/outerLayout"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_margin="15dp"
        android:background="@drawable/shelf"
        android:orientation="vertical"
        android:padding="7dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteX="106dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="109dp"
                android:layout_height="189dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                tools:srcCompat="@drawable/book1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="104dp"
                android:layout_height="187dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                tools:srcCompat="@drawable/book2" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="104dp"
                android:layout_height="187dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                tools:srcCompat="@drawable/book3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="109dp"
                android:layout_height="189dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                tools:srcCompat="@drawable/book4" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="104dp"
                android:layout_height="187dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                tools:srcCompat="@drawable/book5" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="104dp"
                android:layout_height="187dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                tools:srcCompat="@drawable/book6" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="109dp"
                android:layout_height="189dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                tools:srcCompat="@drawable/book7" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="104dp"
                android:layout_height="187dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                tools:srcCompat="@drawable/book8" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="104dp"
                android:layout_height="187dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                tools:srcCompat="@drawable/book9" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>